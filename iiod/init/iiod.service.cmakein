[Unit]
Description=IIO Daemon
After=network.target
ConditionPathExists=/sys/bus/iio

[Service]
EnvironmentFile=-/etc/default/iiod
ExecStart=@CMAKE_INSTALL_FULL_SBINDIR@/iiod $IIOD_EXTRA_OPTS
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
Alias=iiod.service
